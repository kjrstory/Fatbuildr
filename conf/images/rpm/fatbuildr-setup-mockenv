"""
    This script is a utility to generate Mock environment configuration for
    Fatbuildr in RPM specific container image.
"""

import sys
from jinja2 import Environment

TEMPLATE = """\
# Mock environment configuration generated by Fatbuildr.

include('{{ base }}.cfg')

config_opts['root'] = '{{ name }}'
{% if packages|length %}
config_opts['chroot_additional_packages'] = '{{packages | join(' ')}}'
{% endif %}
"""


def usage():
    print(f"usage: {sys.argv[0]} <NAME> <BASE> [<PACKAGES>]")
    sys.exit(1)


def main():

    # Parse args
    if len(sys.argv) < 3:
        usage()
    name = sys.argv[1]
    base = sys.argv[2]
    packages = []
    if len(sys.argv) > 3 and len(sys.argv[3]):
        packages = sys.argv[3].split(',')

    # Generate Mock environment configuration
    template = Environment(trim_blocks=True, lstrip_blocks=True).from_string(
        TEMPLATE
    )
    config = f"/etc/mock/{name}.cfg"
    print("Generating mock environment configuration file", config)
    with open(config, 'w+') as fh:
        fh.write(
            template.render(
                name=name, base=base, packages=packages
            )
        )


if __name__ == '__main__':
    main()
