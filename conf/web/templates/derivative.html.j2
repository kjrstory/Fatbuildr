{% extends "layout/base.html.j2" %}
{% block title %}{% if config['INSTANCE'] == 'all' %}{{ instance }} > {% endif %}{{ format }} > {{ distribution }} > {{ derivative }}{% endblock %}
{% block content %}
<h1>{% if config['INSTANCE'] == 'all' %}{{ instance }} > {% endif %}{{ format }} > {{ distribution }} > {{ derivative }} > artefacts </h1>
<ul>
{% for artefact in artefacts %}
  <li>
    <a href="{{ url_for('artefact', instance=instance, fmt=format, distribution=distribution, derivative=derivative, architecture=artefact.architecture, artefact=artefact.name, output='html') }}">
      {{ artefact.name }} {{ artefact.architecture }} {{ artefact.version }}
    </a>
  </li>
{% endfor %}
</ul>
<a href="{{ url_for('derivative', instance=instance, fmt=format, distribution=distribution, derivative=derivative, output='json') }}">JSON</a>
{% endblock %}
